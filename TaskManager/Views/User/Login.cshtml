@model TaskManager.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6 lt8"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7 lt8"> <![endif]-->
<!--[if IE 8 ]>    <html lang="en" class="no-js ie8 lt8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="en" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html lang="en" class="no-js">
<!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>Login</title>
    <link rel="shortcut icon" href="../favicon.ico">
    @Styles.Render("~/Content/login")
</head>
<body>
    <div class="container">
        
        <header>
            <h1>Web  <span>Management</span></h1>
        </header>
        <section>
            <div id="container_demo">
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">

                        <h1>Login</h1>
                        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                        {
                            @Html.AntiForgeryToken()
                            <p>
                                @Html.LabelFor(m=> m.UserName, new Dictionary<string, object>
                                    {
                                        { "class", "uname" },
                                        { "data-icon", "u" },
                                    })
                                @Html.TextBoxFor(m=> m.UserName, new Dictionary<string, object>
                                    {
                                        { "placeholder", "UserName" },
                                        { "required", "required" },
                                    })
                            </p>
                            <p>
                                @Html.LabelFor(m=> m.Password, new Dictionary<string, object>
                                    {
                                        { "class", "youpasswd" },
                                        { "data-icon", "p" },
                                    })
                                @Html.PasswordFor(m=> m.Password, new Dictionary<string, object>
                                    {
                                        { "placeholder", "Password" },
                                        { "required", "required" },
                                    })
                            </p>
                            <p class="keeplogin">
                                @*<input type="checkbox" name="loginkeeping" id="loginkeeping" value="loginkeeping" />
                                <label for="loginkeeping">Ghi nhớ</label>*@
                            </p>
                            <p class="login button">
                                <input type="submit" value="Login" />
                            </p>
                            <p class="change_link">
                                @Html.ValidationSummary(true)
                                @*Not a member yet ?
									    <a href="#toregister" class="to_register">Join us</a>*@
                            </p>
                        }
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
